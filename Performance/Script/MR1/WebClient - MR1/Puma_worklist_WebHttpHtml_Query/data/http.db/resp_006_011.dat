commonModule.directive('pumaConfirm', ['openDialog', function (openDialog) {
    return {
        restrict: 'A',
        scope: {
            ngConfirmMessage: '@confirmMessage',
            ngWarningMessage: '@warningMessage',
            ngConfirm: '&confirm'
        },
        link: function (scope, element) {
            element.bind('click', function () {
                if (scope.ngWarningMessage) {
                    openDialog.openIconDialogOkCancelNoTitleWarning(openDialog.NotifyMessageType.Warn, scope.ngWarningMessage, scope.ngConfirmMessage, scope.ngConfirm);
                }
                else {
                    openDialog.openIconDialogOkCancelNoTitle(openDialog.NotifyMessageType.Warn, scope.ngConfirmMessage, scope.ngConfirm);
                }
            });
        }
    }
}]);